@model StudentReg.Models.Students

<h4>Добавление студента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddedStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentsName" class="control-label">Имя</label>
                <input asp-for="StudentsName" required class="form-control" />
                <span asp-validation-for="StudentsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsMiddleName" class="control-label">Отчество</label>
                <input asp-for="StudentsMiddleName" required class="form-control" />
                <span asp-validation-for="StudentsMiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsSurName" class="control-label">Фамилия</label>
                <input asp-for="StudentsSurName" required class="form-control" />
                <span asp-validation-for="StudentsSurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
