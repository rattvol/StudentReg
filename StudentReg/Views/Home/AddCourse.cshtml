@model StudentReg.Models.Courses

<h4>Добавление курса</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddedCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoursesName"  class="control-label">Название курса</label>
                <input asp-for="CoursesName" required class="form-control" />
                <span asp-validation-for="CoursesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}